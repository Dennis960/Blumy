		"arctic": "^1.9.2",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.13",
		"drizzle-kit": "^0.24.1",
		"drizzle-orm": "^0.33.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
