{
	"name": "dashboard",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"test": "POSTGRES_DB=esplant_test TEST=1 npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:integration": "POSTGRES_DB=esplant_test TEST=1 playwright test",
		"test:ui": "POSTGRES_DB=esplant_test TEST=1 playwright test --ui",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"drizzle": "drizzle-kit generate"
	},
	"devDependencies": {
		"@lucia-auth/adapter-drizzle": "^1.1.0",
