# Test configuration for ESP-IDF Unit Tests
# This inherits from the main sdkconfig but adds test-specific settings

# Include main configuration
include(${CMAKE_CURRENT_SOURCE_DIR}/sdkconfig)

# Unity test framework configuration
CONFIG_UNITY_ENABLE_FLOAT=y
CONFIG_UNITY_ENABLE_DOUBLE=y
CONFIG_UNITY_ENABLE_64BIT=y
CONFIG_UNITY_ENABLE_COLOR=y

# Increase stack size for tests
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Enable more detailed logging for tests
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y

# WiFi configuration for tests
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP_WIFI_STATIC_TX_BUFFER_NUM=0
CONFIG_ESP_WIFI_DYNAMIC_TX_BUFFER_NUM=32